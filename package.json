{
  "name":            "easy-apply",
  "displayName":     "Easy Apply",
  "version":         "0.0.1",
  "private":         true,
  "packageManager":  "pnpm@7.8.0",
  "description":     "Easy Apply is a chrome extension that helps developers streamline their job search process. The extension extracts the required experience for a job posting and allows the user to set their own experience level in years on the settings page. It then displays the experience requirement in a way that the user can easily see if it is relevant to them, with red indicating that the user does not meet the requirement, green indicating that the user meets the requirement, and orange indicating that the relevance could not be determined. The extension also includes autofill functionality for job application forms and customization options for the user to specify which information they want included when autofilling forms. Easy Apply can be installed either by downloading the extension file from the releases page and loading it as an unpacked extension or by downloading it from the extensions store. The extension can be configured on the options page and used on job application pages by clicking the autofill button in the popup window. If you have any questions or issues with the extension, please feel free to open an issue on GitHub: https://github.com/Refaelbenzvi24/easy-apply.",
  "scripts":         {
    "dev":            "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare":    "esno scripts/prepare.ts",
    "dev:web":        "vite",
    "dev:js":         "npm run build:js -- --mode development",
    "dev:autofill":   "npm run build:autofill -- --mode development",
    "dev:bg":         "tsup --watch ./src",
    "build":          "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js build:autofill build:bg",
    "build:prepare":  "esno scripts/prepare.ts",
    "build:web":      "vite build",
    "build:js":       "vite build --config vite.config.content.ts",
    "build:autofill": "vite build --config vite.config.autoFill.ts",
    "build:bg":       "tsup",
    "pack":           "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip":       "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx":       "crx pack extension -o ./extension.crx",
    "pack:xpi":       "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox":  "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear":          "rimraf extension extension.*",
    "lint":           "eslint .",
    "test":           "vitest test"
  },
  "devDependencies": {
    "@antfu/eslint-config":             "^0.27.0",
    "@ffflorian/jszip-cli":             "^3.1.6",
    "@iconify/json":                    "^2.1.119",
    "@rollup/plugin-replace":           "^5.0.1",
    "@types/fs-extra":                  "^9.0.13",
    "@types/jsdom":                     "^20.0.1",
    "@types/node":                      "^18.8.3",
    "@types/webextension-polyfill":     "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@unocss/reset":                    "^0.45.29",
    "@vitejs/plugin-vue":               "^3.1.2",
    "@vue/compiler-sfc":                "^3.2.40",
    "@vue/test-utils":                  "^2.1.0",
    "@vueuse/core":                     "^9.9.0",
    "chokidar":                         "^3.5.3",
    "cross-env":                        "^7.0.3",
    "crx":                              "^5.0.1",
    "eslint":                           "^8.25.0",
    "esno":                             "^0.16.3",
    "fs-extra":                         "^10.1.0",
    "immer":                            "^9.0.17",
    "jsdom":                            "^20.0.3",
    "kolorist":                         "^1.6.0",
    "npm-run-all":                      "^4.1.5",
    "rimraf":                           "^3.0.2",
    "sass":                             "^1.57.1",
    "tailwindcss":                      "^3.2.4",
    "tsup":                             "^6.5.0",
    "typescript":                       "^4.8.4",
    "unocss":                           "^0.45.29",
    "unplugin-auto-import":             "^0.11.2",
    "unplugin-icons":                   "^0.14.11",
    "unplugin-vue-components":          "^0.22.8",
    "vite":                             "^3.1.6",
    "vitest":                           "^0.24.0",
    "vue":                              "^3.2.40",
    "vue-demi":                         "^0.13.11",
    "web-ext":                          "^7.2.0",
    "webext-bridge":                    "^5.0.5",
    "webextension-polyfill":            "^0.10.0"
  },
  "dependencies":    {
    "@egoist/vue-emotion": "^0.6.2",
    "axios":               "^1.2.1"
  }
}
